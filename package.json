{
  "name": "@f12io/maple",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "./dist/module/index.cjs",
  "module": "./dist/module/index.js",
  "types": "./dist/module/types/src/index.d.ts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/module/types/src/index.d.ts",
        "require": "./dist/module/types/src/index.d.cts"
      },
      "import": "./dist/module/index.js",
      "require": "./dist/module/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "clean": "rimraf dist",
    "build:module": "cross-env BUILD_TYPE=lib vite build",
    "build:runtime": "cross-env BUILD_TYPE=runtime vite build",
    "build:types": "tsc -p tsconfig.build.json && node scripts/copy-dts.js",
    "build": "npm run clean && npm run build:module && npm run build:runtime && npm run build:types",
    "preview": "vite preview",
    "test": "vitest --browser",
    "prettier:fix": "prettier --write . --ignore-path .gitignore",
    "preversion": "npm run test && npm run build"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/browser-playwright": "^4.0.16",
    "cross-env": "^10.1.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "tslib": "^2.8.1",
    "tsx": "4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
