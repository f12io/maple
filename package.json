{
  "name": "maple",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "./dist/module/index.cjs",
  "module": "./dist/module/index.js",
  "types": "./dist/module/types/src/index.d.ts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/module/types/src/index.d.ts",
        "require": "./dist/module/types/src/index.d.cts"
      },
      "import": "./dist/module/index.js",
      "require": "./dist/module/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && BUILD_TYPE=lib vite build && BUILD_TYPE=runtime vite build && tsc -p tsconfig.build.json && find dist/module/types -name '*.d.ts' -exec sh -c 'cp \"$1\" \"${1%.d.ts}.d.cts\"' _ {} \\;",
    "preview": "vite preview",
    "test": "vitest --browser",
    "prettier:fix": "prettier --write . --ignore-path .gitignore",
    "preversion": "npm run test && npm run build"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/browser-playwright": "^4.0.16",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "tslib": "^2.8.1",
    "tsx": "4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
